<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.oleksiisosevych.flickrimagesbrowsermvp">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".router.RouterActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".categories.CategoriesActivity"
            android:label="@string/activity_title_categories"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".categorydetails.CategoryDetailsActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".imagedetails.ImageDetailsActivity"
            android:label="@string/activity_title_image_details"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".welcome.WelcomeActivity"
            android:label="@string/activity_title_welcome"
            android:screenOrientation="portrait"/>

    </application>

</manifest>